<h1>Order details</h1>

<table class="table">
  <thead class="thead-dark">
  <tr>
    <th>Person</th>
    <th>Item</th>
    <th>Amount</th>
    <th>Price</th>
    <th>Comment</th>
  </tr>
  </thead>

  <% @items.each do |item| %>
    <tr>
      <td><%= item.user_id.first_name + " " + item.user_id.last_name %></td>
      <td><%= item.name %></td>
      <td><%= item.amount %></td>
      <td><%= item.price %></td>
      <td><%= item.comment %></td>
    </tr>
  <% end %>
</table>
<br>

<%= form_for :newItem, url: newItem_url, :html => {:class => 'form-inline'} do |f| %>
  <%= f.text_field(:person, {:value => current_user.first_name, :style => 'display: none;'}) %>

  <div class="form-group mx-sm-3 mb-2">
    <%= f.label(:name, {:class => 'sr-only'}) %>
    <%= f.text_field(:name, {:class => 'form-control', :placeholder => 'Meal'}) %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <%= f.label(:amount, {:class => 'sr-only'}) %>
    <%= f.number_field(:amount, {:class => 'form-control', :placeholder => 'Amount'}) %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <%= f.label(:price, {:class => 'sr-only'}) %>
    <%= f.number_field(:price, {:class => 'form-control', :placeholder => 'Price'}) %>
  </div>

  <div class="form-group mx-sm-3 mb-2">
    <%= f.label(:comment, {:class => 'sr-only'}) %>
    <%= f.text_field(:comment, {:class => 'form-control', :placeholder => 'Comment'}) %>
  </div>

  <%= f.number_field(:order, {:style => 'display: none;'}) %>
  <%= f.button 'Add', class: 'btn btn-dark mb-2', type: 'submit' %>
<% end %>