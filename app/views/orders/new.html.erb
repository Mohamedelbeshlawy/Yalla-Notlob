<h1>Add Order</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <%= form_for :newOrder, url: newOrder_url do |f| %>
        <% if @order.errors.any? %>
          <% @order.errors.full_messages.each do |msg| %>
              <div class="alert alert-danger"><%= msg %></div>
          <% end %>    
        <% end %>
        
        <div class="form-group ">
          <%= f.label(:meal_type, {:class => 'sr-only'}) %>
          <%= f.select :meal_type, %w[Breakfast Lunch Dinner], { prompt: "Order for..."}, { class: "form-control", :style => 'margin-top: 100px; margin-bottom: 30px;'} %>
        </div>

        <div class="form-group ">
          <%= f.label(:restaurant_name, {:class => 'sr-only'}) %>
          <%= f.text_field(:restaurant_name, {:class => 'form-control', :placeholder => 'Restaurant', :style => 'margin-bottom: 30px;'}) %>
        </div>

        <div class="custom-file">
          <%= f.label(:restaurant_menu, {:class => 'custom-file-label', :for => "menu"}) %>
          <%= f.file_field(:restaurant_menu, {:id => "menu", :class => 'custom-file-input', :style => 'margin-bottom: 30px;'}) %>
        </div>

        <%= f.button 'Publish', class: 'btn btn-primary mt-5', type: 'submit' %>
      <% end %>
    </div>


  </div>
</div>
</div>