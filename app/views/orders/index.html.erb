  <div class="row">
    <div class="col-5 table-responsive order_details_table_left">
      <table class="table">
        <thead class="thead-dark">
          <tr>
          
            <th scope="col">Order</th>
            <th scope="col">User</th>
            <th scope="col">Meal</th>
            <th scope="col">Restaurant</th>
       
          </tr>
          <% @orders.each do |order| %>
            <td><a href="/orders/<%=order.id%>/items"><%= order.user_id %></a></td>
            <td><a href="/orders/<%=order.id%>/items"><%= order.meal_type %></a></td>
            <td><a href="/orders/<%=order.id%>/items"><%= order.restaurant_name %></a></td>
            <td><%= link_to "Cancel", cancelOrder_path(order) , class: "btn btn-danger btn-sm", method: :get %></td>
            <td><%= link_to "Finish", finishOrder_path(order) , class: "btn btn-danger btn-sm", method: :get %></td>
          </tr>
          <%end%>
        </thead>
        <tbody>
        </tbody>
      </table>
</div>
<div class="container flex-grow-1">
    <div class="mt-0">
        <h1 class="text-center fw-bold">Orders</h1>
    </div>
     <table class="table table-dark">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Order</th>
            <th scope="col">Resturant</th>
            <th scope="col">Invited</th>
            <th scope="col">Joined</th>
            <th scope="col">Status</th>
            <th scope="col" colspan="3">Actions</th>
        </tr>
        </thead>
    </table>
    <div class="col-md-4" style="margin: 10px;">
        <%= link_to "Start New Order", "/orders/new" , class: "btn btn-primary"%>
    </div>
</div>